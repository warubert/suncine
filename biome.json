{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "attributePosition": "multiline",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveNestedTestSuites": "error",
        "useArrowFunction": "off",
        "useLiteralKeys": "info"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "useArrayLiterals": "error",
        "useHookAtTopLevel": "error"
      },
      "style": {
        "noDefaultExport": "error",
        "noNegationElse": "error",
        "useCollapsedElseIf": "error",
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": [
              "kebab-case",
              "PascalCase"
            ]
          }
        },
        "useForOf": "info",
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "conventions": [
              {
                "selector": {
                  "kind": "variable"
                },
                "formats": [
                  "snake_case",
                  "CONSTANT_CASE"
                ]
              },
              {
                "selector": {
                  "kind": "functionParameter"
                },
                "formats": [
                  "snake_case",
                  "CONSTANT_CASE"
                ]
              },
              {
                "selector": {
                  "kind": "objectLiteralProperty"
                },
                "formats": [
                  "snake_case",
                  "PascalCase",
                  "CONSTANT_CASE"
                ]
              },
              {
                "selector": {
                  "kind": "classProperty"
                },
                "formats": [
                  "snake_case",
                  "CONSTANT_CASE"
                ]
              },
              {
                "selector": {
                  "kind": "typeLike"
                },
                "formats": [
                  "PascalCase",
                  "CONSTANT_CASE"
                ]
              },
              {
                "selector": {
                  "kind": "typeProperty"
                },
                "formats": [
                  "snake_case",
                  "CONSTANT_CASE"
                ]
              }
            ]
          }
        }
      },
      "suspicious": {
        "noConsoleLog": "error",
        "noEmptyBlockStatements": "error",
        "noSkippedTests": "error",
        "useAwait": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "semicolons": "asNeeded",
      "trailingCommas": "none"
    }
  }
}
